groups:
- name: HostHealth
  rules:
  - alert: HostUp
    expr: up < 1
    for: 5m
    labels:
      severity: critical
    annotations:
      summary: Host '{{labels.instance}}' is down.
      description: >-
        Host '{{ $labels.instance }}' is down.
          VALUE = {{ $value }}
          LABELS = {{ $labels }}
  - alert: HostAvailable
    expr: absent(up)
    for: 5m
    labels:
      severity: critical
    annotations:
      summary: Metrics endpoint for host '{{labels.instance}}' is unreachable.
      description: >-
        The metrics endpoint for host '{{ $labels.instance }}' is unreachable.
          VALUE = {{ $value }}
          LABELS = {{ $labels }}
